{
  "name": "ouorz-mono",
  "description": "Monorepo for Tony's Personal Website and Related Projects",
  "version": "0.0.2",
  "packageManager": "pnpm@10.14.0+sha512.ad27a79641b49c3e481a16a805baa71817a04bbe06a38d17e60e2eaee83f6a146c6a688125f5792e48dd5ba30e7da52a5cda4c3992b9ccf333f9ce223af84748",
  "license": "GPL-3.0-or-later",
  "private": true,
  "engines": {
    "pnpm": ">=8",
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "turbo run dev --filter=@ouorz/main",
    "dev:twilight": "turbo run dev --parallel --filter=./packages/twilight-*",
    "lint": "turbo run lint --filter=@ouorz/main",
    "test": "turbo run test --filter=@ouorz/main",
    "build": "turbo run build --filter=@ouorz/main",
    "start": "turbo run start --filter=@ouorz/main",
    "upgrade:root": "ncu -u && pnpm install",
    "upgrade:main": "turbo run upgrade --filter=@ouorz/main && pnpm install",
    "clean": "turbo run clean --parallel && rm -rf node_modules",
    "preinstall": "npx only-allow pnpm"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@ouorz/eslint-config-root": "workspace:*",
    "@ouorz/prettier-config": "workspace:*",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "prettier-plugin-solidity": "^1.4.1",
    "solhint": "^5.0.3",
    "solhint-plugin-prettier": "^0.1.0",
    "turbo": "^2.5.8"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
